TYPEMAP

Authen::Kerberos                T_PTROBJ_NU
Authen::Kerberos::Kadmin        T_PTROBJ_NU

INPUT

T_PTROBJ_NU
    if ($arg == &PL_sv_undef) {
        $var = NULL;
    } else if (sv_isa($arg, \"${ntype}\")) {
        IV tmp = SvIV((SV *) SvRV($arg));
        $var = INT2PTR($type, tmp);
    } else {
        croak(\"$var is not of type ${ntype}\");
    }

OUTPUT

T_PTROBJ_NU
    if ($var == NULL)
        $arg = &PL_sv_undef;
    else
        sv_setref_pv($arg, \"${ntype}\", (void *) $var);
